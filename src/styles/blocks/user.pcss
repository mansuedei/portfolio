.user {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.user__avatar {
	margin-bottom: 80px;
}

.user__avatar-image {
	display: block;
	object-fit: cover;
	width: 100%;
	height: 100%;
}

.user__desc {
	width: 100%;
}

.user__desc-item {
	display: flex;
	font-size: 16px;
	margin-bottom: 20px;
}

.user__key {
	width: 150px;
	opacity: 0.15;
}
