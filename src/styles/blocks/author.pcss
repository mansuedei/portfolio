.author {
	display: flex;
	align-items: center;
}

.author__avatar {
	width: 75px;
	height: 75px;
	margin-right: 30px;
}

.author__avatar--image {
	display: block;
	object-fit: cover;
	width: 100%;
	height: 100%;
}

.author__desc--name {
	font-size: 18px;
	font-weight: 700;
}

.author__desc--position {
	font-size: 16px;
	font-weight: 700;
	opacity: 0.3;
}
